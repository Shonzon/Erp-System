@if (User.Identity.IsAuthenticated)
{
    <div class="card card-warning card-outline card-outline-tabs">
        <div class="card-header p-0 border-bottom-0">
            <ul class="nav nav-tabs" id="custom-tabs-four-tab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="custom_category-tab" data-toggle="pill" href="#product-setup-container" role="tab" aria-controls="product-setup-container" onclick="ChangeTab('_categoryCreation', 1)" aria-selected="true">Product Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " id="custom_product-group-tab" data-toggle="pill" href="#product-setup-container" role="tab" aria-controls="product-setup-container" onclick="ChangeTab('_categoryCreation', 1)" aria-selected="true">Product Group</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " id="custom_sub-category-tab" data-toggle="pill" href="#product-setup-container" role="tab" aria-controls="product-setup-container" onclick="ChangeTab('_categoryCreation', 1)" aria-selected="true">Product Sub Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " id="custom_attribute-tab" data-toggle="pill" href="#product-setup-container" role="tab" aria-controls="product-setup-container" onclick="ChangeTab('_categoryCreation', 1)" aria-selected="true">Create Attributes</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " id="custom_attribute-mapping-tab" data-toggle="pill" href="#product-setup-container" role="tab" aria-controls="product-setup-container" onclick="ChangeTab('_categoryCreation', 1)" aria-selected="true">Attribute Mapping</a>
                </li>
            </ul>
        </div>
        <div class="card-body text-sm">
            <div class="tab-content" id="custom-tabs-five-tabContent">
                <div class="tab-pane fade active show" id="product-setup-container" role="tabpanel" aria-labelledby="custom-tabs-four-home-tab">

                </div>
            </div>
        </div>
        <!-- /.card -->
    </div>

    <script type="text/javascript">
    ChangeTab("_categoryCreation", 1);
    function ChangeTab(viewName,viewNo) {
         var urlpath = '@Url.Action("ChangeTab", "Product")';
            $.ajax({
                url: urlpath,
                type: "Post",
                data: { ViewName: viewName, ViewNo: viewNo },
                async: true,
                headers: {
                    'Authorization': 'Bearer ' + sessionStorage.getItem('access_token')
                },
                success: function (result) {
                    $("#product-setup-container").empty();
                    $("#product-setup-container").append(result);
                },error: function(xhr, status, error) {
                      alert(error);
                }
            });
    }
    </script>
}
